{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<div class="card">
    <div class="card-body">
        <h4>Editar Postagem</h4>
        <form action="/admin/postagens/edit" method="post">
            <input type="hidden" value="{{postagem._id}}" name="id">
            <label for="titulo">Titulo: </label>
            <input class="form-control" type="text" value="{{postagem.titulo}}" name="titulo">
            <label for="slug">Slug: </label>
            <input class="form-control" type="text" value="{{postagem.slug}}" name="slug">
            <label for="descrição">Descrição: </label>
            <input class="form-control" type="text" value="{{postagem.descricao}}" name="descricao">
            <label for="conteudo">Conteúdo: </label>
            <textarea class="form-control" name="conteudo">{{postagem.conteudo}}</textarea>
            <label for="categoria">Categoria: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Editar postagem</button>
        </form>
    </div>
</div>