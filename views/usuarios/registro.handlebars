<div class="text-center">
    <form action="/usuarios/registro" method="POST"  class="needs-validation mt-5" style="width: 100%;max-width: 330px;padding: 15px;margin: auto;">
    
        {{#each erros}}
        <div class="alert alert-danger">{{texto}}</div>
        {{else}}

        {{/each}}

        <img class="mb-4 rounded" src="https://cdn.iconscout.com/icon/free/png-256/node-js-1174925.png " alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Registro</h1>

        <label for="text" class="sr-only">Nome</label>
        <input type="text" name="nome" class="form-control" placeholder="Nome">
        
        <label for="email" class="sr-only">Endere√ßo de email</label>
        <input type="email" name="email" class="form-control mt-1" placeholder="Email">
        
        <label for="senha" class="sr-only">Senha</label>
        <input type="password" name="senha" class="form-control mt-1" placeholder="Senha">
        
        <label for="senha2" class="sr-only">Repita sua senha</label>
        <input type="password" name="senha2" class="form-control mt-1" placeholder="Repita sua senha">
        
        <button class="btn shadow-lg btn-lg btn-primary btn-block mt-4" type="submit">Criar conta</button>
</form>
</div>